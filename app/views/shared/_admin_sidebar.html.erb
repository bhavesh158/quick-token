<aside class="hidden lg:flex lg:w-72 lg:h-screen lg:sticky lg:top-0 shrink-0 flex-col border-r border-slate-200 bg-white">
  <div class="border-b border-slate-200 px-6 py-5">
    <%= link_to quicktoken_brand_path, class: "flex items-center gap-3" do %>
      <div class="flex h-9 w-9 items-center justify-center rounded-lg bg-primary text-white">
        <span class="material-symbols-outlined text-xl">confirmation_number</span>
      </div>
      <div>
        <p class="text-lg font-bold tracking-tight text-slate-900">QuickToken</p>
        <p class="text-xs uppercase tracking-wider text-slate-500">Admin</p>
      </div>
    <% end %>
  </div>

  <nav class="flex-1 px-4 py-5">
    <p class="mb-3 px-2 text-xs font-semibold uppercase tracking-wide text-slate-500">Navigation</p>
    <div class="space-y-2">
      <a href="<%= admin_token_queues_path %>" class="block rounded-lg px-3 py-2.5 text-sm font-semibold <%= active_item == :queues ? 'bg-slate-900 text-white' : 'text-slate-700 hover:bg-slate-100' %>">
        <span class="material-symbols-outlined text-sm mr-2">queue</span>
        Queues
      </a>
    </div>
  </nav>

  <div class="border-t border-slate-200 p-4">
    <%= form_with(url: admin_logout_path, method: :delete) do |form| %>
      <%= form.submit "Logout", class: "w-full rounded-lg bg-slate-900 px-3 py-2.5 text-sm font-bold text-white hover:bg-slate-700 transition-colors" %>
    <% end %>
  </div>
</aside>

<!-- Mobile Header -->
<div class="lg:hidden sticky top-0 z-40 border-b border-slate-200 bg-white px-4 py-3">
  <div class="flex items-center justify-between">
    <%= link_to quicktoken_brand_path, class: "flex items-center gap-2" do %>
      <div class="flex h-8 w-8 items-center justify-center rounded-lg bg-primary text-white">
        <span class="material-symbols-outlined text-lg">confirmation_number</span>
      </div>
      <span class="text-base font-bold text-slate-900">QuickToken</span>
    <% end %>
    <div class="flex items-center gap-2">
      <a href="<%= admin_token_queues_path %>" class="rounded-lg bg-slate-100 p-2 text-slate-700">
        <span class="material-symbols-outlined text-sm">queue</span>
      </a>
      <%= form_with(url: admin_logout_path, method: :delete) do |form| %>
        <%= form.submit "Logout", class: "rounded-lg bg-slate-900 px-3 py-1.5 text-xs font-bold text-white" %>
      <% end %>
    </div>
  </div>
</div>
