<!-- Toast Notification Container -->
<div id="toast-container" class="fixed bottom-4 right-4 z-50 flex flex-col gap-2">
  <% if flash[:notice].present? %>
    <div class="toast-notification flex items-center gap-3 rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm font-medium text-emerald-800 shadow-lg animate-slide-in">
      <span class="material-symbols-outlined text-lg">check_circle</span>
      <span><%= flash[:notice] %></span>
    </div>
  <% end %>
  <% if flash[:alert].present? %>
    <div class="toast-notification flex items-center gap-3 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm font-medium text-red-700 shadow-lg animate-slide-in">
      <span class="material-symbols-outlined text-lg">error</span>
      <span><%= flash[:alert] %></span>
    </div>
  <% end %>
</div>

<script>
  // Auto-hide toast notifications
  document.addEventListener('DOMContentLoaded', function() {
    setTimeout(function() {
      document.querySelectorAll(".toast-notification").forEach(function(el) {
        el.style.transition = "opacity 0.3s, transform 0.3s"
        el.style.opacity = "0"
        el.style.transform = "translateX(100%)"
        setTimeout(function() { el.remove() }, 300)
      })
    }, 6000)
  })
</script>

<style>
  @keyframes slide-in {
    from {
      opacity: 0;
      transform: translateX(100%);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  .animate-slide-in {
    animation: slide-in 0.3s ease-out;
  }
</style>
