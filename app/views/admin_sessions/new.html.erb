<main class="relative min-h-screen overflow-hidden bg-slate-50">
  <div class="pointer-events-none absolute -left-24 -top-24 h-72 w-72 rounded-full bg-blue-200/50 blur-3xl"></div>
  <div class="pointer-events-none absolute -bottom-24 -right-24 h-72 w-72 rounded-full bg-cyan-200/40 blur-3xl"></div>

  <div class="mx-auto flex min-h-screen max-w-5xl items-center px-6 py-10">
    <div class="grid w-full gap-8 rounded-2xl border border-slate-200 bg-white p-8 shadow-xl lg:grid-cols-2">
      <section>
        <span class="inline-flex items-center rounded-full bg-blue-50 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-blue-700">
          QuickToken Secure Access
        </span>
        <h1 class="mt-4 text-3xl font-black tracking-tight text-slate-900">Admin Login</h1>
        <p class="mt-3 max-w-md text-sm leading-relaxed text-slate-600">
          Use the admin password to open dashboard controls and serve the next customer in real time.
        </p>
        <div class="mt-8 rounded-xl border border-slate-200 bg-slate-50 p-4">
          <p class="text-sm font-semibold text-slate-700">Tip</p>
          <p class="mt-1 text-xs text-slate-600">Password is read from <code>QUICK_TOKEN_ADMIN_PASSWORD</code>. Fallback is <code>admin123</code>.</p>
        </div>
      </section>

      <section class="rounded-xl border border-slate-200 bg-white p-6">
        <% if flash[:alert].present? %>
          <div class="mb-4 rounded-lg border border-red-200 bg-red-50 p-3 text-sm text-red-700"><%= flash[:alert] %></div>
        <% end %>

        <%= form_with(url: admin_login_path, method: :post, class: "space-y-4") do |form| %>
          <div>
            <%= form.label :password, "Password", class: "mb-1 block text-sm font-semibold text-slate-700" %>
            <%= form.password_field :password, required: true, autofocus: true, class: "w-full rounded-lg border border-slate-300 px-3 py-2.5 text-slate-900 focus:border-blue-500 focus:outline-none" %>
          </div>

          <%= form.submit "Login to Admin", class: "w-full rounded-lg bg-blue-600 px-4 py-2.5 font-semibold text-white shadow-lg shadow-blue-200 transition hover:bg-blue-700" %>
        <% end %>
      </section>
    </div>
  </div>
</main>
