<div class="relative flex min-h-screen flex-col font-display bg-background-light text-slate-900 antialiased">
  <header class="sticky top-0 z-50 w-full border-b border-slate-200 bg-background-light/80 backdrop-blur-md">
    <div class="mx-auto flex max-w-7xl items-center justify-between px-6 py-4 lg:px-10">
      <div class="flex items-center gap-2">
        <div class="flex h-8 w-8 items-center justify-center rounded-lg bg-primary text-white">
          <span class="material-symbols-outlined text-xl">confirmation_number</span>
        </div>
        <h2 class="text-xl font-bold tracking-tight text-slate-900">QuickToken</h2>
      </div>
      <a href="<%= root_path %>" class="rounded-lg border border-slate-300 px-4 py-2 text-sm font-bold text-slate-700 hover:bg-slate-100">Back to Home</a>
    </div>
  </header>

  <main class="flex-1">
    <section class="mx-auto max-w-5xl px-6 py-16 lg:px-10 lg:py-24">
      <div class="grid w-full gap-8 rounded-2xl border border-slate-200 bg-white p-8 shadow-xl lg:grid-cols-2">
        <section>
          <span class="inline-flex items-center rounded-full bg-blue-50 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-blue-700">QuickToken Secure Access</span>
          <h1 class="mt-4 text-3xl font-black tracking-tight text-slate-900">Admin Login</h1>
          <p class="mt-3 max-w-md text-sm leading-relaxed text-slate-600">Authorized queue creators can access dashboard controls and manage sessions in real time.</p>
        </section>

        <section class="rounded-xl border border-slate-200 bg-white p-6">
          <% if flash[:alert].present? %>
            <div class="mb-4 rounded-lg border border-red-200 bg-red-50 p-3 text-sm text-red-700"><%= flash[:alert] %></div>
          <% end %>

          <%= form_with(url: admin_login_path, method: :post, class: "space-y-4") do |form| %>
            <div>
              <%= form.label :password, "Password", class: "mb-1 block text-sm font-semibold text-slate-700" %>
              <%= form.password_field :password, required: true, autofocus: true, class: "w-full rounded-lg border border-slate-300 px-3 py-2.5 text-slate-900 focus:border-blue-500 focus:outline-none" %>
            </div>

            <%= form.submit "Login to Admin", class: "w-full rounded-lg bg-blue-600 px-4 py-2.5 font-semibold text-white shadow-lg shadow-blue-200 transition hover:bg-blue-700" %>
          <% end %>
        </section>
      </div>
    </section>
  </main>

  <footer class="border-t border-slate-200 bg-white py-8">
    <div class="mx-auto flex max-w-7xl items-center justify-between px-6 lg:px-10">
      <span class="text-sm text-slate-500">Â© 2026 QuickToken</span>
      <div class="flex gap-6 text-sm text-slate-500">
        <a href="<%= privacy_path %>" class="hover:text-primary">Privacy</a>
        <a href="<%= terms_path %>" class="hover:text-primary">Terms</a>
      </div>
    </div>
  </footer>
</div>
