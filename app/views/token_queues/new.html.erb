<div class="relative flex min-h-screen flex-col font-display bg-background-light text-slate-900 antialiased">
  <header class="sticky top-0 z-50 w-full border-b border-slate-200 bg-background-light/80 backdrop-blur-md">
    <div class="mx-auto flex max-w-7xl items-center justify-between px-6 py-4 lg:px-10">
      <div class="flex items-center gap-2">
        <div class="flex h-8 w-8 items-center justify-center rounded-lg bg-primary text-white">
          <span class="material-symbols-outlined text-xl">confirmation_number</span>
        </div>
        <h2 class="text-xl font-bold tracking-tight text-slate-900">QuickToken</h2>
      </div>
      <div class="flex items-center gap-4">
        <button class="hidden sm:flex h-10 items-center justify-center rounded-lg bg-primary px-5 text-sm font-bold text-white transition-all hover:bg-primary/90" form="new-queue-form">Create Queue</button>
      </div>
    </div>
  </header>

  <main class="flex-1">
    <section class="mx-auto max-w-7xl px-6 py-16 lg:px-10 lg:py-24">
      <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
        <div class="flex flex-col gap-8">
          <% if flash[:notice].present? %>
            <div class="rounded-lg border border-emerald-200 bg-emerald-50 p-3 text-sm text-emerald-800"><%= flash[:notice] %></div>
          <% end %>
          <% if flash[:alert].present? %>
            <div class="rounded-lg border border-red-200 bg-red-50 p-3 text-sm text-red-700"><%= flash[:alert] %></div>
          <% end %>

          <div class="flex flex-col gap-4">
            <span class="inline-flex w-fit items-center rounded-full bg-primary/10 px-3 py-1 text-xs font-semibold uppercase tracking-wider text-primary">Instant Setup</span>
            <h1 class="text-4xl font-black leading-tight tracking-tight text-slate-900 sm:text-5xl lg:text-6xl">
              Create your digital queue <span class="text-primary">in seconds.</span>
            </h1>
            <p class="max-w-xl text-lg leading-relaxed text-slate-600">
              Zero login. Zero hassle. Just name your queue and start serving your customers immediately from any device.
            </p>
          </div>

          <%= form_with(model: @token_queue, url: create_token_queues_path, html: { id: "new-queue-form", class: "flex w-full max-w-lg flex-col gap-4 sm:flex-row" }) do |form| %>
            <div class="relative flex-1">
              <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-4 text-slate-400">
                <span class="material-symbols-outlined text-xl">label</span>
              </div>
              <%= form.text_field :name, required: true, placeholder: "Queue Name (e.g. Joe's Coffee)", class: "h-14 w-full rounded-xl border-slate-200 bg-white pl-12 pr-4 text-slate-900 placeholder-slate-400 focus:border-primary focus:ring-primary" %>
            </div>
            <%= form.submit "Create Queue", class: "h-14 rounded-xl bg-primary px-8 text-base font-bold text-white shadow-lg shadow-primary/25 transition-all hover:bg-primary/90 hover:shadow-primary/40 active:scale-95" %>
          <% end %>

          <% if @token_queue.errors.any? %>
            <div class="rounded-lg border border-red-200 bg-red-50 p-3 text-sm text-red-700"><%= @token_queue.errors.full_messages.to_sentence %></div>
          <% end %>

          <div class="flex items-center gap-6">
            <div class="flex -space-x-2">
              <div class="h-8 w-8 rounded-full border-2 border-background-light bg-slate-200"></div>
              <div class="h-8 w-8 rounded-full border-2 border-background-light bg-slate-300"></div>
              <div class="h-8 w-8 rounded-full border-2 border-background-light bg-slate-400"></div>
            </div>
            <p class="text-sm font-medium text-slate-500">Join 5,000+ businesses serving faster.</p>
          </div>
        </div>

        <div class="relative lg:ml-10">
          <div class="aspect-square w-full rounded-3xl bg-gradient-to-br from-primary/20 to-primary/5 p-8 lg:p-12">
            <div class="h-full w-full rounded-2xl bg-white shadow-2xl overflow-hidden border border-slate-100">
              <div class="flex items-center justify-between border-b border-slate-100 bg-slate-50/50 px-6 py-4">
                <div class="flex gap-1.5">
                  <div class="h-3 w-3 rounded-full bg-red-400"></div>
                  <div class="h-3 w-3 rounded-full bg-amber-400"></div>
                  <div class="h-3 w-3 rounded-full bg-emerald-400"></div>
                </div>
                <div class="h-2 w-24 rounded-full bg-slate-200"></div>
              </div>
              <div class="p-6">
                <div class="mb-6 h-8 w-1/2 rounded-lg bg-slate-100"></div>
                <div class="space-y-4">
                  <div class="flex items-center justify-between rounded-xl border border-slate-100 p-4 bg-primary/5">
                    <div class="flex items-center gap-3">
                      <div class="h-10 w-10 rounded-full bg-primary/20 text-primary flex items-center justify-center font-bold">01</div>
                      <div class="h-4 w-24 rounded bg-slate-200"></div>
                    </div>
                    <div class="h-8 w-20 rounded-lg bg-primary"></div>
                  </div>
                  <div class="flex items-center justify-between rounded-xl border border-slate-100 p-4">
                    <div class="flex items-center gap-3">
                      <div class="h-10 w-10 rounded-full bg-slate-100 text-slate-400 flex items-center justify-center font-bold">02</div>
                      <div class="h-4 w-32 rounded bg-slate-200"></div>
                    </div>
                  </div>
                  <div class="flex items-center justify-between rounded-xl border border-slate-100 p-4">
                    <div class="flex items-center gap-3">
                      <div class="h-10 w-10 rounded-full bg-slate-100 text-slate-400 flex items-center justify-center font-bold">03</div>
                      <div class="h-4 w-28 rounded bg-slate-200"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</div>
