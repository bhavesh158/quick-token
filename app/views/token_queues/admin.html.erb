<div
  class="min-h-screen bg-background-light text-slate-900 lg:flex"
  data-queue-view="admin"
  data-queue-token="<%= @token_queue.unique_token %>"
  data-queue-status="<%= json_escape(@queue_status.to_json) %>"
>
  <%= render "shared/admin_sidebar", active_item: :queues %>

  <div class="flex-1">
    <header class="border-b border-slate-200 bg-white px-4 py-3 lg:px-8 lg:py-4">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-xl font-bold tracking-tight text-slate-900 lg:text-2xl">Queue Dashboard</h1>
          <p class="text-xs uppercase tracking-wider text-slate-500 hidden sm:block">Manage active and completed queue sessions</p>
        </div>
        <div class="flex items-center gap-2">
          <span id="connection-status" class="flex items-center gap-1.5 rounded-full bg-emerald-50 px-2.5 py-1 text-xs font-semibold text-emerald-700">
            <span class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
            </span>
            <span class="hidden sm:inline">Live</span>
          </span>
        </div>
      </div>
    </header>

    <main class="w-full px-4 py-6 lg:px-8">
      <% if flash[:notice].present? %>
        <div id="flash-notice" class="flash-message mb-4 rounded-lg border border-emerald-200 bg-emerald-50 p-3 text-sm text-emerald-800"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:alert].present? %>
        <div id="flash-alert" class="flash-message mb-4 rounded-lg border border-red-200 bg-red-50 p-3 text-sm text-red-700"><%= flash[:alert] %></div>
      <% end %>

      <nav aria-label="Breadcrumb" class="mb-4">
        <ol class="flex items-center gap-2 text-xs font-semibold text-slate-500">
          <li><a href="<%= admin_token_queues_path %>" class="hover:text-slate-700">Queues</a></li>
          <li><span class="material-symbols-outlined text-sm">chevron_right</span></li>
          <li class="text-slate-700"><%= @token_queue.name %></li>
        </ol>
      </nav>

      <section class="mb-4 rounded-xl border border-slate-200 bg-white p-4 shadow-sm lg:mb-6">
        <div class="flex flex-col gap-3 lg:flex-row lg:items-center lg:justify-between">
          <div class="flex items-center gap-3">
            <h2 class="text-lg font-bold text-slate-900"><%= @token_queue.name %></h2>
            <span class="inline-flex rounded-full px-2.5 py-0.5 text-[10px] font-bold uppercase tracking-wide <%= @token_queue.completed? ? 'bg-amber-100 text-amber-700' : 'bg-emerald-100 text-emerald-700' %>">
              <%= @token_queue.status %>
            </span>
          </div>
          <div class="flex flex-wrap items-center gap-2">
            <div class="flex items-center rounded-lg border border-slate-200 bg-slate-50 px-3 py-1.5 gap-2">
              <span class="material-symbols-outlined text-sm text-primary">link</span>
              <span id="public-queue-link" class="text-xs font-medium text-slate-600 truncate max-w-[150px] sm:max-w-[200px]"><%= @public_queue_url %></span>
              <button type="button" class="text-xs font-bold text-primary hover:text-primary/80" onclick="copyQueueLink()">Copy</button>
            </div>
            <a href="<%= admin_token_queue_report_path(@token_queue.unique_token) %>" class="hidden sm:inline-flex items-center gap-1 rounded-lg border border-slate-200 bg-white px-3 py-1.5 text-xs font-bold text-slate-700 hover:bg-slate-50">
              <span class="material-symbols-outlined text-sm">download</span>
              Export CSV
            </a>
          </div>
        </div>
      </section>

      <!-- Stats Grid -->
      <section class="mb-4 grid grid-cols-2 gap-3 lg:mb-6 lg:gap-4">
        <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
          <div class="flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10 text-primary">
              <span class="material-symbols-outlined text-xl">person</span>
            </div>
            <div>
              <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Total Today</p>
              <p class="text-2xl font-bold text-slate-900" id="stat-total"><%= @queue_status[:customer_count] %></p>
            </div>
          </div>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
          <div class="flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-emerald-500/10 text-emerald-600">
              <span class="material-symbols-outlined text-xl">check_circle</span>
            </div>
            <div>
              <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Served</p>
              <p class="text-2xl font-bold text-slate-900" id="stat-served"><%= @queue_status[:total_served_today] %></p>
            </div>
          </div>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
          <div class="flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-amber-500/10 text-amber-600">
              <span class="material-symbols-outlined text-xl">schedule</span>
            </div>
            <div>
              <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Avg Wait</p>
              <p class="text-2xl font-bold text-slate-900" id="stat-avg-wait"><%= @queue_status[:avg_wait_time_minutes] || '--' %><span class="text-sm font-medium text-slate-500">m</span></p>
            </div>
          </div>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
          <div class="flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-blue-500/10 text-blue-600">
              <span class="material-symbols-outlined text-xl">group</span>
            </div>
            <div>
              <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Waiting</p>
              <p class="text-2xl font-bold text-slate-900" id="stat-waiting"><%= @queue_status[:waiting_count] %></p>
            </div>
          </div>
        </div>
      </section>

      <div class="grid grid-cols-1 gap-4 xl:grid-cols-3">
        <!-- Now Serving Card -->
        <div class="relative overflow-hidden rounded-xl border border-slate-200 bg-white p-6 shadow-xl xl:col-span-1">
          <div class="absolute top-0 right-0 p-6 opacity-10"><span class="material-symbols-outlined text-[100px]">person_play</span></div>
          <div class="relative z-10">
            <h3 class="mb-4 text-sm font-semibold uppercase tracking-widest text-slate-500">Now Serving</h3>
            <div class="flex flex-col items-center justify-center gap-4 py-4">
              <div class="flex h-24 w-24 items-center justify-center rounded-2xl bg-primary text-white shadow-lg shadow-primary/30">
                <span class="text-5xl font-black" id="now-serving-ticket">--</span>
              </div>
              <div class="text-center">
                <h1 class="text-2xl font-bold tracking-tight text-slate-900" id="now-serving-name">No one is being served</h1>
                <p class="text-sm text-slate-500" id="now-serving-time"></p>
              </div>
            </div>
            <div class="mt-6">
              <% if @token_queue.active? %>
                <%= form_with(url: complete_admin_token_queue_path(@token_queue.unique_token), method: :post) do |form| %>
                  <%= form.submit "Complete Queue", data: { turbo_confirm: "Complete this queue and move it to history?" }, class: "w-full rounded-xl bg-slate-100 py-3 font-bold text-slate-700 hover:bg-red-100 hover:text-red-700 hover:border-red-300 border border-transparent transition-colors" %>
                <% end %>
              <% else %>
                <button class="w-full rounded-xl bg-slate-300 py-3 font-bold text-slate-700 cursor-not-allowed" disabled>Queue Completed</button>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Main Actions & Waiting Queue -->
        <div class="flex flex-col gap-4 xl:col-span-2">
          <!-- Serve Next Button -->
          <% if @token_queue.active? %>
            <div class="relative overflow-hidden rounded-2xl border border-slate-200 bg-gradient-to-br from-primary to-primary/90 p-1 shadow-xl shadow-primary/20">
              <div class="absolute top-0 right-0 p-32 opacity-10 pointer-events-none">
                <span class="material-symbols-outlined text-[150px] text-white">person_add</span>
              </div>
              <%= form_with(url: next_customer_path(token_queue_token: @token_queue.unique_token), method: :post, html: { class: "relative z-10" }) do |form| %>
                <%= form.button class: "w-full py-6 px-6 text-white flex flex-col items-center justify-center gap-2" do %>
                  <div class="flex items-center gap-3">
                    <span class="material-symbols-outlined text-4xl">person_add</span>
                    <span class="text-2xl font-black uppercase italic tracking-tight">Serve Next</span>
                    <kbd class="hidden lg:inline-flex h-7 items-center rounded bg-white/20 px-2 text-xs font-medium">Space</kbd>
                  </div>
                  <span class="font-medium" id="waiting-count-cta"><%= @queue_status[:waiting_count] %> people waiting in queue</span>
                <% end %>
              <% end %>
            </div>
          <% end %>

          <!-- Waiting Queue List -->
          <div class="flex flex-col overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
            <div class="flex items-center justify-between border-b border-slate-200 bg-slate-50/50 px-4 py-3 lg:px-6">
              <h3 class="flex items-center gap-2 font-bold text-slate-800">
                <span class="material-symbols-outlined text-primary">group</span>
                Waiting Queue
              </h3>
              <span class="rounded-full bg-primary/10 px-2.5 py-1 text-xs font-bold text-primary" id="waiting-count-header"><%= @queue_status[:waiting_count] %> customers</span>
            </div>
            <div class="max-h-[300px] lg:max-h-[400px] divide-y divide-slate-100 overflow-y-auto" id="waiting-list-container">
              <!-- Populated by JS -->
            </div>
          </div>

          <!-- Recently Served -->
          <div class="flex flex-col overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
            <div class="flex items-center justify-between border-b border-slate-200 bg-slate-50/50 px-4 py-3 lg:px-6">
              <h3 class="flex items-center gap-2 font-bold text-slate-800">
                <span class="material-symbols-outlined text-emerald-500">history</span>
                Recently Served
              </h3>
              <span class="text-xs font-semibold text-slate-500" id="served-count-header"><%= @queue_status[:served_customers].count %> today</span>
            </div>
            <div class="max-h-[200px] lg:max-h-[250px] divide-y divide-slate-100 overflow-y-auto" id="served-list-container">
              <!-- Populated by JS -->
            </div>
          </div>
        </div>
      </div>

      <!-- Delete Queue Section -->
      <footer class="mt-6 rounded-xl border border-slate-200 bg-white px-4 py-3 lg:mt-8 lg:px-6">
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
          <div>
            <p class="text-sm font-semibold text-slate-700">Queue Management</p>
            <p class="text-xs text-slate-500">Created <%= @token_queue.created_at.strftime("%b %d, %Y at %I:%M %p") %></p>
          </div>
          <div class="flex gap-2">
            <% if @token_queue.active? %>
              <span class="inline-flex items-center gap-1 rounded-lg bg-emerald-50 px-3 py-1.5 text-xs font-semibold text-emerald-700">
                <span class="material-symbols-outlined text-sm">check_circle</span>
                Active
              </span>
            <% else %>
              <span class="inline-flex items-center gap-1 rounded-lg bg-amber-50 px-3 py-1.5 text-xs font-semibold text-amber-700">
                <span class="material-symbols-outlined text-sm">event_available</span>
                Completed <%= @token_queue.completed_at&.strftime("%b %d") %>
              </span>
            <% end %>
            <%= form_with(url: delete_admin_token_queue_path(@token_queue.unique_token), method: :delete) do |form| %>
              <%= form.submit "Delete Queue", data: { turbo_confirm: "Delete this queue and all customers? This action cannot be undone." }, class: "rounded-lg border border-red-300 bg-red-50 px-3 py-1.5 text-xs font-bold text-red-700 hover:bg-red-100" %>
            <% end %>
          </div>
        </div>
      </footer>
    </main>
  </div>

  <!-- Toast Notification Container -->
  <div id="toast-container" class="fixed bottom-4 right-4 z-50 flex flex-col gap-2"></div>

  <!-- Skip/Remove Confirmation Modal -->
  <div id="action-modal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50 backdrop-blur-sm">
    <div class="mx-4 w-full max-w-md rounded-2xl bg-white p-6 shadow-2xl">
      <h3 class="text-lg font-bold text-slate-900" id="modal-title">Confirm Action</h3>
      <p class="mt-2 text-sm text-slate-600" id="modal-message">Are you sure?</p>
      <div class="mt-6 flex gap-3">
        <button type="button" class="flex-1 rounded-lg border border-slate-300 bg-white px-4 py-2 font-semibold text-slate-700 hover:bg-slate-50" onclick="closeModal()">Cancel</button>
        <button type="button" class="flex-1 rounded-lg bg-primary px-4 py-2 font-bold text-white" id="modal-confirm">Confirm</button>
      </div>
    </div>
  </div>
</div>

<script>
  let modalCallback = null;

  function copyQueueLink() {
    const link = document.getElementById("public-queue-link")?.textContent?.trim()
    if (!link) return
    navigator.clipboard.writeText(link).then(() => {
      showToast("Queue link copied to clipboard!", "success")
    })
  }

  function showToast(message, type = "info") {
    const container = document.getElementById("toast-container")
    const toast = document.createElement("div")
    
    const colors = {
      success: "border-emerald-200 bg-emerald-50 text-emerald-800",
      error: "border-red-200 bg-red-50 text-red-700",
      info: "border-blue-200 bg-blue-50 text-blue-800"
    }
    
    const icons = {
      success: "check_circle",
      error: "error",
      info: "info"
    }
    
    toast.className = `flex items-center gap-3 rounded-lg border px-4 py-3 text-sm font-medium shadow-lg ${colors[type]} animate-slide-in`
    toast.innerHTML = `
      <span class="material-symbols-outlined text-lg">${icons[type]}</span>
      <span>${message}</span>
    `
    
    container.appendChild(toast)
    
    setTimeout(() => {
      toast.style.opacity = "0"
      toast.style.transform = "translateX(100%)"
      setTimeout(() => toast.remove(), 300)
    }, 3000)
  }

  function openModal(title, message, onConfirm) {
    document.getElementById("modal-title").textContent = title
    document.getElementById("modal-message").textContent = message
    modalCallback = onConfirm
    document.getElementById("action-modal").classList.remove("hidden")
    document.getElementById("action-modal").classList.add("flex")
  }

  function closeModal() {
    document.getElementById("action-modal").classList.add("hidden")
    document.getElementById("action-modal").classList.remove("flex")
    modalCallback = null
  }

  function confirmSkip(customerId, customerName) {
    openModal(
      "Skip Customer",
      `Skip ${customerName} and mark them as served without calling them next?`,
      () => {
        const form = document.createElement("form")
        form.method = "POST"
        form.action = `/queue/${document.querySelector('[data-queue-token]').dataset.queueToken}/skip`
        form.innerHTML = `<input type="hidden" name="customer_id" value="${customerId}">`
        document.body.appendChild(form)
        form.submit()
      }
    )
  }

  function confirmRemove(customerId, customerName) {
    openModal(
      "Remove Customer",
      `Remove ${customerName} from the queue? This action cannot be undone.`,
      () => {
        const form = document.createElement("form")
        form.method = "POST"
        form.action = `/queue/${document.querySelector('[data-queue-token]').dataset.queueToken}/customers/${customerId}`
        form.innerHTML = `<input type="hidden" name="_method" value="delete">`
        document.body.appendChild(form)
        form.submit()
      }
    )
  }

  // Auto-hide flash messages
  setTimeout(() => {
    document.querySelectorAll(".flash-message").forEach(el => {
      el.style.transition = "opacity 0.3s"
      el.style.opacity = "0"
      setTimeout(() => el.remove(), 300)
    })
  }, 4000)
</script>

<style>
  @keyframes slide-in {
    from {
      opacity: 0;
      transform: translateX(100%);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  .animate-slide-in {
    animation: slide-in 0.3s ease-out;
  }
</style>
